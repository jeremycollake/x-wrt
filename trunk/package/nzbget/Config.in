config BR2_PACKAGE_NZBGET
	tristate "nzbget - a console based newgroup binary downloader"
	default m if CONFIG_DEVEL
	select BR2_PACKAGE_LIBXML2
	select BR2_PACKAGE_LIBNCURSES
	help
	  NZBGet is a binary newsgrabber for Linux (and Unix and MacOS X where 
	  compatible), which downloads files from usenet based on information 
	  given in nzb-files.
	  .
	  http://sourceforge.net/projects/nzbget/ 
	